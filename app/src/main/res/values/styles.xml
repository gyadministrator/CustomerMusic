<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/mainColor</item>
    </style>

    <!--应用启动页主题-->
    <style name="AppTheme.StartingWindowTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layer_launcher</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <declare-styleable name="NavigationView">
        <attr name="title" format="string" />
        <attr name="showBack" format="boolean" />
        <attr name="showRight" format="boolean" />
        <attr name="srcBack" format="integer" />
        <attr name="srcRight" format="integer" />
    </declare-styleable>

</resources>
